<div class="menu">
  <div class="members">
    <div class="container">

      <div class="row">
        <div class="col-sm-12 ">
          <div class="text-center ">
            <h2>Salads</h2>
          </div>
        </div>
      </div>

      <div class="row">
        <% @salads.each do |salad|%>

          <% if salad.description.nil? %>

            <div class="col-xs-12 col-sm-6 menu-line dish">
              <div class="title">
                <h3><%= salad.name %></h3>
              </div>
              <div class="price">
                <p><%= salad.price %> ₪</p>
              </div>
              <br>
              <hr class="style-seven">
            </div>

          <% else %>

            <div class="col-xs-12 col-sm-6 menu-line menu">
              <div class="title">
                <h3><%= salad.name %></h3>
              </div>
              <div class="des">
                <p><%= salad.description %></p>
              </div>
              <div class="price">
                <p><%= salad.price %> ₪</p>
              </div>
              <hr class="style-seven">
            </div>

          <% end %>

        <% end %>
      </div> 
      
    </div>
  </div>
</div>